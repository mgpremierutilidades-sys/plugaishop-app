{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [
    "node_modules",
    "scripts/ai/_stash_routes/**",
    "scripts/ai/_out/**",
    "context/**",
    "tools/maxximus-orchestrator/data/**",
    "dist-web/**",
    "android/**",
    ".expo/**"
  ]
}
