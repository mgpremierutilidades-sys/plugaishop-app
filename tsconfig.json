{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "react"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "constants/**/*.ts",
    "constants/**/*.tsx",
    "context/**/*.ts",
    "context/**/*.tsx",
    "data/**/*.ts",
    "data/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/dist-web/**",
    "**/web-build/**",
    "**/.expo/**",
    "**/.expo-shared/**",
    "**/_agent_bundle/**",
    "**/_agent_bundle_*/*",
    "**/_backup_*/**",
    "**/_zips_parts_*/**",
    "**/tools/autonomy-core/_out/**",
    "**/tools/autonomy-core/_state/**",
    "**/_state/**",
    "**/ops/**",
    "**/scripts/ai/templates/**"
  ],
  "extends": "expo/tsconfig.base"
}
