{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Mensagem do commit (ex: fix(types): green gate)",
      "default": "fix(ci): green gate"
    }
  ],
  "tasks": [
    {
      "label": "Autoflow: verify (auto-commit/push)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\ai\\_autoflow\\run.ps1",
        "-Mode",
        "verify",
        "-AutoCommit:$true",
        "-AutoPush:$true",
        "-LogFile",
        "scripts/ai/_out/autoflow-vscode.log"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Commit: green gate (typecheck+lint+commit+push)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\ai\\commit_green.ps1",
        "-Message",
        "${input:commitMessage}"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Autoflow: recreate scheduled task",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\ai\\_autoflow\\recreate_schtask.ps1"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Expo: start (LAN)",
      "type": "shell",
      "command": "npx",
      "args": ["expo", "start", "--lan"],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false
      }
    }
  ]
}
