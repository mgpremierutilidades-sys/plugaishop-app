{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Mensagem do commit (ex: fix: ci green)",
      "default": "fix: ci green"
    },
    {
      "id": "pushChoice",
      "type": "pickString",
      "description": "Fazer push ap√≥s commit?",
      "options": ["push", "no-push"],
      "default": "push"
    }
  ],
  "tasks": [
    {
      "label": "Autoflow: verify (auto-commit/push)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\\\scripts\\\\ai\\\\_autoflow\\\\run.ps1",
        "-Mode",
        "verify",
        "-AutoCommit:$true",
        "-AutoPush:$true",
        "-LogFile",
        "scripts/ai/_out/autoflow-vscode.log"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Autoflow: recreate scheduled task",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\\\scripts\\\\ai\\\\_autoflow\\\\recreate_schtask.ps1"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Expo: start (LAN)",
      "type": "shell",
      "command": "npx",
      "args": ["expo", "start", "--lan"],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false
      }
    },
    {
      "label": "Plugaishop: Commit Green (typecheck+lint+commit+push)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "if ('${input:pushChoice}' -eq 'no-push') { powershell -NoProfile -ExecutionPolicy Bypass -File \\"${workspaceFolder}\\\\scripts\\\\ai\\\\commit_green.ps1\\" -Message \\"${input:commitMessage}\\" -NoPush } else { powershell -NoProfile -ExecutionPolicy Bypass -File \\"${workspaceFolder}\\\\scripts\\\\ai\\\\commit_green.ps1\\" -Message \\"${input:commitMessage}\\" }"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
